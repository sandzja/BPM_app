<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "B23E7TGXVK.lv.digitalmind.ablvbpm"
        version = "2.0.0">
    <name>ABLVBPM</name>

    <description>
        BPM servera pieslēgums. Proof of Concept aplikācija izmantojot KSI procesu uzdevumu sadaļu.
    </description>

    <author href="http://digitalmind.lv" email="sandis.rinkis@digitalmind.lv">
        DigitalMind.lv
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.1.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="exit-on-suspend" value="true" />
    <preference name="show-splash-screen-spinner" value="false" /> 
    <preference name="auto-hide-splash-screen" value="true" />
    

    <icon src="img/icon.png" />
    <icon src="img/icon57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="img/icon72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="img/icon114.png"            gap:platform="ios"        width="114" height="114" />
    <icon src="img/icon144.png"            gap:platform="ios"        width="144" height="144" />

    
    <gap:splash src="splash.png" />
    <gap:splash src="img/splash.png" width="320" height="480" />
    <gap:splash src="img/splash_at_2x.png" width="640" height="960" />
    <gap:splash src="img/splash_iphone5.png" width="640" height="1136" />
    <gap:splash src="img/splash-Landscape.png" width="1024" height="768" />
    <gap:splash src="img/splash-Portrait.png" width="768" height="1024" />
    

   
      

</widget>
